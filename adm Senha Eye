    <div class="content">
        <div id="tab-agenda" class="tab-content">
            <label>Filtrar por Profissional</label>
            <select id="filtro-barbeiro-agenda" onchange="carregarAgenda()"></select>
            <div id="render-agenda"></div>
        </div>

        <div id="tab-equipe" class="tab-content" style="display:none;">
    <div class="card">
        <h3 id="titulo-editor">Gerenciar Time</h3>
        <input type="hidden" id="edit-id">
        
        <label>Nome do Profissional</label>
        <input id="b-nome" placeholder="Ex: Lucas">
        
        <div style="background: rgba(197, 160, 89, 0.1); border: 1px dashed var(--primary); padding: 15px; border-radius: 15px; margin-bottom: 15px;">
            <label style="margin-left:0; color:var(--primary);">‚ö†Ô∏è PADR√ÉO DE CADASTRO:</label>
            <p style="font-size: 0.65rem; color: #fff; margin: 5px 0;">Digite: <b>Nome - Valor - Minutos</b></p>
