<script>
    const firebaseConfig = { 
        apiKey: "AIzaSyC0x8r1N7R70BYhfd2daedBjRKH0qupJiI",
        authDomain: "elnes-720ce.firebaseapp.com",
        projectId: "elnes-720ce",
        storageBucket: "elnes-720ce.firebasestorage.app",
        messagingSenderId: "839018097076",
        appId: "1:839018097076:web:cc902e9081e3a35cac2ae1"
    };
    firebase.initializeApp(firebaseConfig);
    const db = firebase.firestore();

    // GERADOR DE GRADE 10 MINUTOS
    const horasBase = [];
    for(let h=0; h<24; h++) {
        for(let m=0; m<60; m+=10) {
            horasBase.push(`${String(h).padStart(2,'0')}:${String(m).padStart(2,'0')}`);
        }
    }

    let barbeirosCache = [];
    let unsubscribeAgenda = null;

    window.onload = () => { init(); };

    async function init() {
        await verificarAssinatura();
        await carregarEquipe();
        carregarAgenda();
        gerarCheckboxesFolga();
        carregarFolgas();
        carregarConfigBot();
        carregarConfigSemanas();
        document.getElementById('f-data').value = new Date().toISOString().split('T')[0];
    }

    function gerarCheckboxesFolga() {
        document.getElementById('grid-selecao-folgas').innerHTML = horasBase.map(h => `
            <input type="checkbox" id="check-${h}" class="check-hora" value="${h}">
            <label for="check-${h}" class="label-hora">${h}</label>
        `).join('');
    }

    function marcarFaixa(ini, fim) {
        document.querySelectorAll('.check-hora').forEach(c => {
            if(c.value >= ini && c.value <= fim) c.checked = true;
        });
    }

    async function carregarEquipe() {
        const snap = await db.collection("barbeiros").get();
        barbeirosCache = snap.docs.map(doc => ({id: doc.id, ...doc.data()}));
        
        const s1 = document.getElementById('filtro-barbeiro-agenda');
        const s2 = document.getElementById('f-barbeiro');
        const s3 = document.getElementById('filtro-folgas-barbeiro');
        const re = document.getElementById('render-equipe');
        
        re.innerHTML = "";
        s1.innerHTML = '<option value="">Todos os Barbeiros</option>';
        s2.innerHTML = '<option value="">Selecione...</option>';
        s3.innerHTML = '<option value="">Filtrar...</option>';

        barbeirosCache.forEach(b => {
            const opt = `<option value="${b.id}">${b.nome}</option>`;
            s1.innerHTML += opt; s2.innerHTML += opt; s3.innerHTML += opt;
            re.innerHTML += `<div class="item-list"><span><b>${b.nome}</b></span><div><button class="btn-edit" onclick="prepararEdicao('${b.id}')">Editar</button><button class="btn-del" onclick="excluir('barbeiros', '${b.id}')">X</button></div></div>`;
        });
    }

    async function salvarVariasFolgas() {
        const bId = document.getElementById('f-barbeiro').value;
        const data = document.getElementById('f-data').value;
        const checks = document.querySelectorAll('.check-hora:checked');
        if(!bId || !data || checks.length === 0) return alert("Selecione tudo!");

        // Remove bloqueios anteriores desse dia/barbeiro para evitar lixo
        const antigos = await db.collection("bloqueios").where("barbeiroId","==",bId).where("data","==",data).get();
        const batch = db.batch();
        antigos.forEach(d => batch.delete(d.ref));

        checks.forEach(c => {
            const ref = db.collection("bloqueios").doc();
            batch.set(ref, { barbeiroId: bId, data, hora: c.value });
        });
        await batch.commit();
        alert("Grade atualizada!");
        gerarCheckboxesFolga();
    }

    function carregarFolgas() {
        const bId = document.getElementById('filtro-folgas-barbeiro').value;
        const render = document.getElementById('render-folgas');
        let query = db.collection("bloqueios").orderBy("data", "desc").orderBy("hora", "asc");
        if(bId) query = query.where("barbeiroId", "==", bId);
        
        query.limit(50).onSnapshot(snap => {
            render.innerHTML = "";
            snap.forEach(doc => {
                const f = doc.data();
                const n = barbeirosCache.find(x => x.id === f.barbeiroId)?.nome || "Barbeiro";
                render.innerHTML += `<div class="item-list" style="font-size:0.7rem;"><span><b>${n}</b>: ${f.data} - ${f.hora}</span><button class="btn-del" onclick="excluir('bloqueios', '${doc.id}')">Remover</button></div>`;
            });
        });
    }

    function carregarAgenda() {
        const bId = document.getElementById('filtro-barbeiro-agenda').value;
        const render = document.getElementById('render-agenda');
        if (unsubscribeAgenda) unsubscribeAgenda();
        
        let query = db.collection("agenda").orderBy("data", "asc").orderBy("hora", "asc");
        unsubscribeAgenda = query.onSnapshot(snap => {
            render.innerHTML = "";
            snap.forEach(doc => {
                const ag = doc.data();
                if (bId && ag.barbeiroId !== bId) return;
                
                render.innerHTML += `
                <div class="card">
                    <div class="agenda-header">
                        <span class="agenda-date">üóìÔ∏è ${ag.data.split('-').reverse().join('/')}</span>
                        <div class="agenda-time">${ag.hora}</div>
                    </div>
                    <div class="agenda-client">${ag.cliente.toUpperCase()}</div>
                    <div class="agenda-details">
                        <div class="detail-item" style="grid-column: span 2;">
                            <span class="detail-label">Servi√ßo</span>
                            <span class="detail-value">${ag.servico}</span>
                        </div>
                    </div>
                    <div class="agenda-footer">
                        <button class="btn-wpp" onclick="window.open('https://wa.me/55${ag.whatsapp}')">üì≤ WHATSAPP</button>
                        <button class="btn-done" onclick="excluir('agenda', '${doc.id}')">CONCLUIR</button>
                    </div>
                </div>`;
            });
        });
    }

    // FUN√á√ïES COMPLEMENTARES (EDITAR, EXCLUIR, TABS, ETC)
    async function salvarBarbeiro() {
        const id = document.getElementById('edit-id').value;
        const nome = document.getElementById('b-nome').value;
        const servs = document.getElementById('b-servs').value;
        if(!nome || !servs) return;
        if(id) await db.collection("barbeiros").doc(id).update({ nome, servicos: servs });
        else await db.collection("barbeiros").add({ nome, servicos: servs });
        limparForm(); carregarEquipe();
    }

    function prepararEdicao(id) {
        const b = barbeirosCache.find(x => x.id === id);
        document.getElementById('edit-id').value = b.id;
        document.getElementById('b-nome').value = b.nome;
        document.getElementById('b-servs').value = b.servicos;
        document.getElementById('btn-cancelar').style.display = "block";
    }

    function limparForm() {
        document.getElementById('edit-id').value = "";
        document.getElementById('b-nome').value = "";
        document.getElementById('b-servs').value = "";
        document.getElementById('btn-cancelar').style.display = "none";
    }

    function switchTab(tab, el) {
        document.querySelectorAll('.tab-content').forEach(t => t.style.display = 'none');
        document.getElementById('tab-'+tab).style.display = 'block';
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        el.classList.add('active');
    }

    async function excluir(col, id) {
        if(confirm("Deseja apagar?")) {
            await db.collection(col).doc(id).delete();
            if(col === 'barbeiros') carregarEquipe();
        }
    }

    // SISTEMA DE ASSINATURA E CONFIGS (MANTIDOS)
    async function verificarAssinatura() {
        const doc = await db.collection("configuracao").doc("assinatura").get();
        if(doc.exists) {
            const venc = doc.data().premiumAte.toDate();
            const resta = Math.ceil((venc - new Date()) / (1000*60*60*24));
            document.getElementById('txt-restam').innerText = resta > 0 ? `Vence em ${resta} dias` : "Expirado";
        }
    }

    async function validarCodigoAtivacao() {
        const cod = document.getElementById('input-codigo-ativacao').value.trim();
        const ref = db.collection("codigos_ativacao").doc(cod);
        const doc = await ref.get();
        if(doc.exists && !doc.data().usado) {
            await ref.update({ usado: true });
            let novaData = new Date();
            novaData.setDate(novaData.getDate() + 30);
            await db.collection("configuracao").doc("assinatura").set({ premiumAte: novaData });
            alert("Ativado!"); location.reload();
        } else alert("C√≥digo inv√°lido");
    }

    async function salvarConfigBot() {
        const t = document.getElementById('conf-telegram-token').value;
        const c = document.getElementById('conf-telegram-chatid').value;
        await db.collection("configuracao").doc("telegram").set({ token: t, chatId: c });
        alert("Bot salvo!");
    }

    async function carregarConfigBot() {
        const doc = await db.collection("configuracao").doc("telegram").get();
        if(doc.exists) {
            document.getElementById('conf-telegram-token').value = doc.data().token || "";
            document.getElementById('conf-telegram-chatid').value = doc.data().chatId || "";
        }
    }

    async function salvarLimiteSemanas() {
        const s = document.getElementById('conf-semanas').value;
        await db.collection("configuracao").doc("calendario").set({ semanasLimite: parseInt(s) });
        alert("Limite salvo!");
    }

    async function carregarConfigSemanas() {
        const doc = await db.collection("configuracao").doc("calendario").get();
        if(doc.exists) document.getElementById('conf-semanas').value = doc.data().semanasLimite || 1;
    }
</script>
</body>
</html>
