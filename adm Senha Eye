    <div class="top-nav-container">
        <div class="tab-bar">
            <div class="tab-btn active" onclick="switchTab('agenda', this)"><span>üìÖ</span><span>AGENDA</span></div>
            <div class="tab-btn" onclick="switchTab('grade', this)"><span>üìè</span><span>GRADE</span></div>
            <div class="tab-btn" onclick="switchTab('equipe', this)"><span>üë•</span><span>EQUIPE</span></div>
            <div class="tab-btn" onclick="switchTab('folgas', this)"><span>üîí</span><span>FOLGAS</span></div>
            <div class="tab-btn" onclick="switchTab('config', this)"><span>‚öôÔ∏è</span><span>AJUSTES</span></div>
        </div>
    </div>

    <div class="content">
        <div id="tab-agenda" class="tab-content">
            <label>Filtrar Profissional</label>
            <select id="filtro-agenda" onchange="carregarAgenda()"></select>
            <div id="render-agenda"></div>
        </div>

        <div id="tab-grade" class="tab-content" style="display:none;">
            <div class="card">
                <h3>Grade Hor√°ria</h3>
                <label>Selecione o Barbeiro</label>
                <select id="grade-barbeiro-select" onchange="carregarConfigGradeBarbeiro()">
                    <option value="">Escolha um profissional...</option>
                </select>
                
                <div id="grade-controles" style="display:none; margin-top: 15px;">
                    <label>Semanas Dispon√≠veis</label>
                    <select id="grade-semanas">
                        <option value="1">Apenas 1 Semana</option>
                        <option value="2">2 Semanas</option>
                        <option value="4">1 M√™s (4 Semanas)</option>
                    </select>

                    <label>Dias de Atendimento</label>
                    <div class="dias-grid" id="grade-dias">
                        <div class="dia-chip" data-day="1" onclick="toggleElement(this)">SEG</div>
                        <div class="dia-chip" data-day="2" onclick="toggleElement(this)">TER</div>
                        <div class="dia-chip" data-day="3" onclick="toggleElement(this)">QUA</div>
                        <div class="dia-chip" data-day="4" onclick="toggleElement(this)">QUI</div>
                        <div class="dia-chip" data-day="5" onclick="toggleElement(this)">SEX</div>
                        <div class="dia-chip" data-day="6" onclick="toggleElement(this)">SAB</div>
                        <div class="dia-chip" data-day="0" onclick="toggleElement(this)">DOM</div>
                    </div>

                    <label style="margin-top:20px;">Hor√°rios (10 em 10 min)</label>
                    <div class="grid-10min" id="render-horarios-grade"></div>
                    
                    <button class="btn-action" onclick="salvarConfigGrade()">Salvar Grade</button>
                </div>
            </div>
        </div>

        <div id="tab-equipe" class="tab-content" style="display:none;">
            <div class="card">
                <h3 id="titulo-equipe">Novo Profissional</h3>
                <input type="hidden" id="edit-barbeiro-id">
                <label>Nome do Barbeiro</label>
                <input id="b-nome" placeholder="Ex: Lucas">
                <label>Servi√ßos (Nome - Pre√ßo - Tempo)</label>
                <textarea id="b-servs" rows="5" placeholder="Corte - 50 - 30&#10;Barba - 30 - 20"></textarea>
                <button class="btn-action" id="btn-salvar-barbeiro" onclick="salvarBarbeiro()">Adicionar</button>
                <button id="btn-cancelar-edit" class="btn-outline" style="display:none; margin-top:10px;" onclick="limparFormEquipe()">CANCELAR</button>
            </div>
            <div id="render-equipe"></div>
        </div>

        <div id="tab-folgas" class="tab-content" style="display:none;">
            <div class="card">
                <h3>Bloqueio Manual</h3>
                <label>Barbeiro</label><select id="f-barbeiro"></select>
                <label>Data do Bloqueio</label><input type="date" id="f-data">
                <label>Hor√°rios para fechar</label>
                <div class="grid-10min" id="grid-selecao-folgas"></div>
                <button class="btn-action" style="background:#ff4d4d; color:#fff;" onclick="salvarFolgas()">Bloquear Hor√°rios</button>
            </div>
            <div id="render-folgas"></div>
        </div>

        <div id="tab-config" class="tab-content" style="display:none;">
            <div class="card">
                <h3>Configura√ß√µes Gerais</h3>
                <p style="font-size:0.7rem; color:var(--text-dim);">Ajustes de sistema e integra√ß√£o com Bot.</p>
                <label>Token Telegram</label>
                <input type="password" id="conf-token" placeholder="...">
                <button class="btn-outline" onclick="alert('Configura√ß√µes salvas!')">Salvar Ajustes</button>
            </div>
