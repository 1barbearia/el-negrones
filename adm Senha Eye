                <input type="date" id="f-data">
                
                <label>Sele√ß√£o R√°pida</label>
                <div class="atalhos-grade">
                    <button class="btn-atalho" onclick="marcarFaixa('08:00','12:00')">MANH√É</button>
                    <button class="btn-atalho" onclick="marcarFaixa('12:00','18:00')">TARDE</button>
                    <button class="btn-atalho" onclick="marcarFaixa('18:00','23:50')">NOITE</button>
                </div>

                <label>Marque o que ficar√° online</label>
                <div class="grid-folgas" id="grid-selecao-folgas"></div>
                <button class="btn-action" onclick="salvarVariasFolgas()">Habilitar no Site</button>
            </div>
            <label>Hor√°rios Liberados</label>
            <select id="filtro-folgas-barbeiro" onchange="carregarFolgas()"></select>
            <div id="render-folgas"></div>
        </div>

        <div id="tab-config" class="tab-content" style="display:none;">
            <div class="card">
                <h3>Janela de Agendamento</h3>
                <label>Limite de semanas vis√≠veis</label>
                <select id="conf-semanas">
                    <option value="1">1 Semana</option>
                    <option value="2">2 Semanas</option>
                    <option value="4">4 Semanas (1 M√™s)</option>
                </select>
                <button class="btn-action" onclick="salvarLimiteSemanas()">Salvar Limite</button>
