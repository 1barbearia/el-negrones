<script>
    // FIREBASE
    const firebaseConfig = { 
        apiKey: "AIzaSyC0x8q1N7R70BYhfd2daedBjRKH0qupJiI",
        authDomain: "elnes-720ce.firebaseapp.com",
        projectId: "elnes-720ce",
        storageBucket: "elnes-720ce.firebasestorage.app",
        messagingSenderId: "839018097076",
        appId: "1:839018097076:web:cc902e9081e3a35cac2ae1"
    };
    firebase.initializeApp(firebaseConfig);
    const db = firebase.firestore();

    const todosHorarios = [];
    for(let i=7; i<22; i++) {
        for(let j=0; j<60; j+=10) {
            todosHorarios.push(`${i.toString().padStart(2,'0')}:${j.toString().padStart(2,'0')}`);
        }
    }

    window.onload = () => {
        renderizarChipsBase();
        carregarEquipe();
        carregarAgenda();
        verificarAssinatura();
        carregarConfigBot();
        document.getElementById('f-data').value = new Date().toISOString().split('T')[0];
    };

    function renderizarChipsBase() {
        const html = todosHorarios.map(h => `<div class="hora-chip" data-time="${h}" onclick="toggleElement(this)">${h}</div>`).join('');
        document.getElementById('render-horarios-grade').innerHTML = html;
        document.getElementById('grid-selecao-folgas').innerHTML = html;
    }

    // --- AGENDA ---
    function carregarAgenda() {
        const bId = document.getElementById('filtro-barbeiro-agenda').value;
        db.collection("agenda").orderBy("data", "asc").orderBy("hora", "asc").onSnapshot(snap => {
            const render = document.getElementById('render-agenda');
            render.innerHTML = "";
            snap.forEach(doc => {
                const ag = doc.data();
                if (bId && ag.barbeiroId !== bId) return;
                render.innerHTML += `
                <div class="card">
                    <div class="agenda-header"><span class="agenda-date">üóìÔ∏è ${ag.data}</span><div class="agenda-time">${ag.hora}</div></div>
                    <div class="agenda-client">${ag.cliente.toUpperCase()}</div>
                    <div class="agenda-details">
                        <div><div class="detail-label">Servi√ßo</div><div class="detail-value">${ag.servico}</div></div>
                        <div><div class="detail-label">Barbeiro</div><div class="detail-value">${ag.barbeiroNome || '---'}</div></div>
                    </div>
                    <div style="display:flex; gap:10px;">
                        <button class="btn-outline" style="flex:1;" onclick="window.open('https://wa.me/55${ag.whatsapp}')">WHATSAPP</button>
                        <button class="btn-action" style="flex:1; margin-top:0; background:#00ff88; color:#000;" onclick="excluir('agenda', '${doc.id}')">CONCLUIR</button>
                    </div>
                </div>`;
            });
        });
    }

    // --- EQUIPE (DESIGN ORIGINAL + SALVAMENTO) ---
    async function carregarEquipe() {
        const snap = await db.collection("barbeiros").get();
        const lista = document.getElementById('render-equipe');
        const selects = [
            document.getElementById('filtro-barbeiro-agenda'),
            document.getElementById('f-barbeiro'),
            document.getElementById('grade-barbeiro-select')
        ];
        lista.innerHTML = "";
        selects.forEach(s => s.innerHTML = '<option value="">Selecione...</option>');
        snap.forEach(doc => {
            const b = doc.data();
            selects.forEach(s => s.innerHTML += `<option value="${doc.id}">${b.nome}</option>`);
            lista.innerHTML += `
                <div class="item-list">
                    <span><b>${b.nome.toUpperCase()}</b></span>
                    <div class="btn-group">
                        <button class="btn-edit" onclick="prepararEdicao('${doc.id}', '${b.nome}', \`${b.servicos}\`)">EDITAR</button>
                        <button class="btn-del" onclick="excluir('barbeiros', '${doc.id}')">X</button>
                    </div>
                </div>`;
        });
    }

    async function salvarBarbeiro() {
        const id = document.getElementById('edit-barbeiro-id').value;
        const nome = document.getElementById('b-nome').value;
        const servicos = document.getElementById('b-servs').value;
        if(!nome || !servicos) return alert("Preencha Nome e Servi√ßos!");
        const dados = { nome, servicos };
        if(id) await db.collection("barbeiros").doc(id).update(dados);
        else await db.collection("barbeiros").add(dados);
        limparFormEquipe(); carregarEquipe();
    }

    function prepararEdicao(id, nome, servs) {
        document.getElementById('edit-barbeiro-id').value = id;
        document.getElementById('b-nome').value = nome;
        document.getElementById('b-servs').value = servs;
        document.getElementById('btn-cancelar-edit').style.display = "block";
        document.getElementById('titulo-equipe').innerText = "Editando Profissional";
        window.scrollTo(0,0);
    }

    function limparFormEquipe() {
        document.getElementById('edit-barbeiro-id').value = "";
        document.getElementById('b-nome').value = "";
        document.getElementById('b-servs').value = "";
        document.getElementById('btn-cancelar-edit').style.display = "none";
        document.getElementById('titulo-equipe').innerText = "Novo Profissional";
    }

    // --- GRADE ---
    async function carregarConfigGradeBarbeiro() {
        const bId = document.getElementById('grade-barbeiro-select').value;
        if(!bId) { document.getElementById('grade-controles').style.display = 'none'; return; }
        document.getElementById('grade-controles').style.display = 'block';
        document.querySelectorAll('.dia-chip, #render-horarios-grade .hora-chip').forEach(el => el.classList.remove('active'));
        const doc = await db.collection("grades").doc(bId).get();
        if(doc.exists) {
            const d = doc.data();
            document.getElementById('grade-semanas').value = d.semanas || "1";
            d.dias?.forEach(dia => document.querySelector(`.dia-chip[data-day="${dia}"]`)?.classList.add('active'));
            d.horarios?.forEach(h => document.querySelector(`#render-horarios-grade .hora-chip[data-time="${h}"]`)?.classList.add('active'));
        }
    }

    async function salvarConfigGrade() {
        const bId = document.getElementById('grade-barbeiro-select').value;
        const semanas = document.getElementById('grade-semanas').value;
        const dias = Array.from(document.querySelectorAll('.dia-chip.active')).map(el => parseInt(el.dataset.day));
        const horarios = Array.from(document.querySelectorAll('#render-horarios-grade .hora-chip.active')).map(el => el.dataset.time);
        await db.collection("grades").doc(bId).set({semanas, dias, horarios});
        alert("Grade salva!");
    }

    // --- ASSINATURA E BOT ---
    async function verificarAssinatura() {
        const doc = await db.collection("configuracao").doc("assinatura").get();
        if(doc.exists) {
            const venc = doc.data().premiumAte.toDate();
            const resta = Math.ceil((venc - new Date()) / (1000 * 60 * 60 * 24));
            document.getElementById('txt-restam').innerText = resta > 0 ? `Premium vence em ${resta} dias` : "Assinatura Expirada";
        }
    }

    async function validarCodigoAtivacao() {
        const cod = document.getElementById('input-codigo-ativacao').value;
        const snap = await db.collection("codigos_ativacao").where("codigo", "==", cod).where("usado", "==", false).get();
        if(!snap.empty) {
            const novaData = new Date(); novaData.setDate(novaData.getDate() + 30);
            await db.collection("configuracao").doc("assinatura").set({ premiumAte: novaData });
            await snap.docs[0].ref.update({ usado: true });
            alert("Sucesso!"); verificarAssinatura();
        } else alert("C√≥digo inv√°lido.");
    }

    async function salvarConfigBot() {
        const token = document.getElementById('conf-telegram-token').value;
        const chatid = document.getElementById('conf-telegram-chatid').value;
        await db.collection("configuracao").doc("bot").set({ token, chatid });
        alert("Bot Configurado!");
    }

    async function carregarConfigBot() {
        const doc = await db.collection("configuracao").doc("bot").get();
        if(doc.exists) {
            document.getElementById('conf-telegram-token').value = doc.data().token || "";
            document.getElementById('conf-telegram-chatid').value = doc.data().chatid || "";
        }
    }

    // --- BLOQUEIOS E AUXILIARES ---
    async function salvarFolgas() {
        const bId = document.getElementById('f-barbeiro').value;
        const data = document.getElementById('f-data').value;
        const horas = Array.from(document.querySelectorAll('#grid-selecao-folgas .hora-chip.active')).map(el => el.dataset.time);
        if(!bId || !data || horas.length === 0) return alert("Selecione barbeiro, data e hor√°rios.");
        const batch = db.batch();
        horas.forEach(h => batch.set(db.collection("bloqueios").doc(), { barbeiroId: bId, data, hora: h }));
        await batch.commit();
        alert("Bloqueado!");
        document.querySelectorAll('#grid-selecao-folgas .hora-chip').forEach(el => el.classList.remove('active'));
    }

    function toggleElement(el) { el.classList.toggle('active'); }
    function switchTab(tab, el) {
        document.querySelectorAll('.tab-content').forEach(t => t.style.display = 'none');
        document.getElementById('tab-'+tab).style.display = 'block';
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        el.classList.add('active');
    }
    async function excluir(col, id) { if(confirm("Excluir item?")) { await db.collection(col).doc(id).delete(); if(col==='barbeiros') carregarEquipe(); } }
</script>
</body>
</html>
